<library path="aiim_rviz_plugins">

  <!-- Displays plugins -->

  <class
    name="aiim_rviz_plugins/BoundingBoxArray"
    type="aiim::rviz_plugins::BoundingBoxArrayDisplay"
    base_class_type="rviz_common::Display"
  >
    <description>
      Convert an array of bounding boxes to markers and display them.
    </description>
    <message_type>aiim_autoware_msgs/msg/BoundingBoxArray</message_type>
  </class>

  <class
    name="aiim_rviz_plugins/Trajectory"
    type="aiim::rviz_plugins::TrajectoryDisplay"
    base_class_type="rviz_common::Display"
  >
    <description>
      Convert a trajectory to markers and display them.
    </description>
    <message_type>aiim_autoware_msgs/msg/Trajectory</message_type>
  </class>

</library>
